{
	"name": "roast-time-backend",
	"version": "1.0.0",
	"description": "Node.js backend for roasttime app",
	"main": "src/index.ts",
	"type": "commonjs",
	"scripts": {
		"build": "tsc -p tsconfig.json",
		"start": "node dist/src/index.js",
		"start:cluster": "npx pm2 start dist/index.js -i max",
		"server": "nodemon src/index.ts",
		"cluster": "npx pm2 start src/index.ts -i max",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"style:all": "tsc && npm run style:eslint && npm run style:prettier",
		"style:eslint": "eslint --fix '**/*.{js,ts}'",
		"style:prettier": "prettier --write '**/*.{js,ts}'"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/natnaelh14/roast-time-backend.git"
	},
	"author": "Natnael Haile",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/natnaelh14/roast-time-backend/issues"
	},
	"homepage": "https://github.com/natnaelh14/roast-time-backend#readme",
	"devDependencies": {
		"@babel/core": "^7.20.2",
		"@babel/preset-env": "^7.20.2",
		"@types/bcrypt": "^5.0.0",
		"@types/cookie-parser": "^1.4.3",
		"@types/cors": "^2.8.13",
		"@types/express": "^4.17.17",
		"@types/jest": "^29.5.0",
		"@types/jsonwebtoken": "^9.0.1",
		"@types/morgan": "^1.9.4",
		"@types/node": "^18.15.8",
		"@types/supertest": "^2.0.12",
		"@typescript-eslint/eslint-plugin": "^5.56.0",
		"@typescript-eslint/parser": "^5.56.0",
		"babel-jest": "^29.5.0",
		"eslint": "^8.36.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-import-resolver-typescript": "^3.5.3",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-jest": "^27.2.1",
		"eslint-plugin-n": "^15.6.1",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-promise": "^6.1.1",
		"husky": "^8.0.3",
		"jest": "^29.5.0",
		"lint-staged": "^13.2.0",
		"nodemon": "^2.0.22",
		"prisma": "^4.11.0",
		"supertest": "^6.3.3",
		"ts-jest": "^29.0.5",
		"ts-node": "^10.9.1",
		"tsconfig-paths": "^4.1.2",
		"typescript": "^5.0.2"
	},
	"dependencies": {
		"@prisma/client": "^4.11.0",
		"bcrypt": "^5.1.0",
		"concurrently": "^7.6.0",
		"cookie-parser": "^1.4.6",
		"cors": "^2.8.5",
		"dotenv": "^16.0.3",
		"express": "^4.18.2",
		"express-validator": "^6.15.0",
		"helmet": "^6.0.1",
		"jsonwebtoken": "^9.0.0",
		"morgan": "^1.10.0",
		"pm2": "^5.3.0",
		"uuid": "^9.0.0"
	},
	"lint-staged": {
		"*": "prettier --ignore-unknown --write",
