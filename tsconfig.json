{
	"compilerOptions": {
		"lib": ["ES2022"],
		"module": "ES2022",
		"moduleResolution": "node",
		"target": "ES2022",
		"esModuleInterop": true,
		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"~/*": ["./src/*"]
		},
		"types": ["node", "jest"],
		"allowJs": true,
		"removeComments": true,
		"forceConsistentCasingInFileNames": true,
		"strict": false,
		"noUncheckedIndexedAccess": true,
		"noImplicitAny": true,
		"skipLibCheck": true
	},
	"ts-node": {
		"esm": true,
		"experimentalSpecifierResolution": "node"
	},
	"include": ["**/*.ts", "env.d.ts"],
	"exclude": ["node_modules", "dist", "coverage"]
}
